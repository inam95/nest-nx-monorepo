{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug NestJS (Nx)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "dev", "api"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
